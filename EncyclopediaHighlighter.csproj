<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<AssemblyName>EncyclopediaHighlighter</AssemblyName>
		<Product>Highlighting plugin.</Product>
		<Version>1.0.0</Version>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<LangVersion>latest</LangVersion>
		<RestoreAdditionalProjectSources>
			https://api.nuget.org/v3/index.json;
			https://nuget.bepinex.dev/v3/index.json;
			https://nuget.samboy.dev/v3/index.json
		</RestoreAdditionalProjectSources>
		<RootNamespace>EncyclopediaHighlighter</RootNamespace>
	</PropertyGroup>

	<PropertyGroup>
		<GameDir>C:\Program Files (x86)\Steam\steamapps\common\BALLxPIT</GameDir>
		<BepInExInterop>$(GameDir)\BepInEx\interop</BepInExInterop>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.*" IncludeAssets="compile" />
		<PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="$(BepInExInterop)\*.dll">
			<Private>False</Private>
		</Reference>
	</ItemGroup>
</Project>
